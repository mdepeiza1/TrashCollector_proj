@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeekChosenByCustomer">Day of Week For Pickup</label>
                <select asp-for="DayOfWeekChosenByCustomer" class="form-control" id="DayOfWeekChosenByCustomer">
                    <option>Sunday</option>
                    <option>Monday</option>
                    <option>Tuesday</option>
                    <option>Wednesday</option>
                    <option>Thursday</option>
                    <option>Friday</option>
                    <option>Saturday</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ExtraDay" class="control-label">Extra Day</label><br>
                <input asp-for="ExtraDay" type ="date" class="form-control" id="ExtraDay">
            </div>


            <div class="form-group">

                <label asp-for="StartDateOfSuspension">Start Date Of Suspension</label><br>
                <input asp-for="StartDateOfSuspension" type="date" id="date">

            </div>
            <div class="form-group">

                <label asp-for="EndDateOfSuspension">End Date Of Suspension</label><br>
                <input asp-for="EndDateOfSuspension" type="date" id="date">

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
