@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="EditIndex">Edit Day of the Week Selected</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DayOfWeekChosenByCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NormalPickedUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraPickedUp)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.DayOfWeekSelectedByEmployee)
        </th>*@
            @*<th>
            @Html.DisplayNameFor(model => model.Customer)
        </th>*@
            @*<th>
            @Html.DisplayNameFor(model => model.IdentityUser)
        </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfWeekChosenByCustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalPickedUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraPickedUp)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.DayOfWeekSelectedByEmployee)
        </td>*@
            @*<td>
            @Html.DisplayFor(modelItem => item.Customer.Id)
        </td>*@
            @*<td>
            @Html.DisplayFor(modelItem => item.IdentityUser.Id)
        </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
