@*@model TrashCollector.Models.Employee*@
@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="checkbox">
                <input asp-for="NormalPickedUp" />
                <label asp-for="NormalPickedUp"> 
                    Regular Pickup Completed
                </label>
            </div>
            <div class="form-check">
                <input asp-for="ExtraPickedUp" class="form-check-input" type="checkbox" value="true" id="ExtraPickedUp">
                <label asp-for="ExtraPickedUp" class="form-check-label"> 
                    Extra Pickup Completed
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
